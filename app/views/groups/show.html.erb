<section class="vh-100 flex flex-column items-center">
 <%= render 'show_header' %>
  <p class="f3 green tc fw6"><%= notice %></p>
  <p class="f3 red tc fw6"><%= alert %></p>
 <main class="w-100 bg-gray-100 pb-3 flex flex-column" style="gap:1rem;flex:1">
    <p class="flex bg-white justify-between f-4 pa-3 fw-6">
        <span class="o-50">Total transactions amount</span>
        <span><%="$#{@group.payments.sum(:amount)}"%></span>
    </p>
 <%if @payments.length.positive?%>  
 <% @payments.each do |payment| %>
     <%=render partial: 'payment', locals:{payment:payment} %>
 <%end%>
 <%end%>
</main>
 <div class='new-transaction pt-3 pb-3 w-100 flex justify-center'>
    <%=link_to new_group_payment_path(@group), class:'w-90 tc pa-3 ba b--white' do%>
        <button class="f-3 fw-5">New transaction</button>
    <%end%>
 </div>	
</section>