 <%= render 'header_for_new'%>
 <section class="flex flex-column items-center mt3" style="gap:1rem">
<p class="f3 fw6">Add Category</p>
<%=form_with(model: @group, url: groups_url,html: {class: "flex flex-column items-center w-100"}) do |f| %>
  <% if @group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
        <% @group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field w-100 w-50-ns mb-3">
    <%= f.text_field :name, autofocus: true, class:'w-100', placeholder:'Category name'%>
  </div>

  <div class="field w-100 w-50-ns mb-3">
    <%= f.text_field :icon,class:'w-100', placeholder:'Icon URL'%>
  </div>
 <div class="field w-100 w-50-ns mb3 flex">
    <%=f.select :icon_id, options_for_select(@icons.map{ |i| [i[:name], i[:id], {'data-img-src'=>i[:url]}] })%>
  </div>
  
  <div>
    <%= f.submit :Save, class:'submit-new-cat-trans px-4 py-2 ' %>
  </div>  
  <script>
  </script>
<% end %>